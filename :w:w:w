$(document).ready(function() {
		$( "#cand" ).change(function() {
			var selection = $(this).children("option:selected").val();
			console.log(selection);
			$.ajax({
url: 'sql_calls.php', 
data: {candidate: selection},
success: function(data){
$('#results').html(data);	

}
});
			});

		});

